{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm -w --filter @romance/shared... build && pnpm -w --filter @romance/client... build",
    "watchPatterns": [
      "apps/client/**",
      "packages/shared/**",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "/bin/sh -c \"pnpm -C apps/client preview -- --host 0.0.0.0 --port \$PORT\""
  }
}
