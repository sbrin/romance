{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm -w --filter @romance/server... build",
    "watchPatterns": [
      "apps/server/**",
      "packages/shared/**",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "pnpm -C apps/server start",
    "healthcheckPath": "/ping"
  }
}
